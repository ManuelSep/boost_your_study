<%= simple_form_for @pedido do |f| %>
  <%= f.input :nome %>
  <%= f.input :email %>
  <%= f.input :ano_letivo, collection: Area.all.map{ |a| a.name} %>
  <%= f.input :tipo, collection: ["Aluno", "Professor"] %>
  <%= f.input  :disciplina, collection: Disciplina.all.map {|d| d.nome } << "Outra" %>
  <%= f.button :submit %>
<% end %>
