<div style="background-image: url('assets/grey_background.png'); margin-bottom: 40px;">
  <div class="row">
    <div class="col-sm-6" style="padding-left: 0 !important">
      <div class="cartao" style="margin-bottom: 40px;">
        <div class="disciplina-titulo text-center" style="line-height: 1.7;">
          <strong><%= @ad.disciplina.nome %></strong>
        </div>
      </div>
    </div>
  </div>

    <div class="row">
      <% @explicadores.each do |explicador| %>
        <div class="col-sm-6">
          <div class="cartolina" style="width: 100%; height:100%; margin-right: auto; margin-left: auto; display: flex;">
            <div class="col-sm-4">
              <%= cl_image_tag explicador.image, class: "avatar-team2" %>
              <div class="nome-teacher text-center"><strong><%= explicador.name %></strong></div>
            </div>
            <div class="col-sm-8" style="margin-left: 10px; vertical-align: center">
              <div class="teacher-description text-center"><%= explicador.descricao_completa %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>




