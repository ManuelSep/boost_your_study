<div  <%= cl_image_tag 'background_image' %> >
<div class="container">
  <div class="row">
    <p class="text-center" style="margin-right: auto; margin-left: auto; margin-top: 40px;">
      <strong class="subtitle team-title">Preços</strong>
    </p>
  </div>
  <hr style="margin-top: 40px; margin-bottom: 40px;">
  <div class="row">
    <div class="col-xs-12 col-sm-3">
      <div class="card card-ciclo" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center"><strong>Primário</strong></div>
         <%= cl_image_tag 'primario', class: 'icon_prices' %>
        <div class="card-description text-center">25€/h</div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="card card-ciclo" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center"><strong>Básico</strong></div>
        <%= cl_image_tag 'basico', class: 'icon_prices' %>
        <div class="card-description text-center">25€/h</div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="card card-ciclo" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center"><strong>Secundário</strong></div>
        <%= cl_image_tag 'secundario', class: 'icon_prices' %>
        <div class="card-description text-center">27,5€/h</div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="card card-ciclo" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center"><strong>Superior</strong></div>
        <%= cl_image_tag 'superior', class: 'icon_prices' %>
        <div class="card-description text-center">35€/h</div>
      </div>
    </div>
  </div>

  <hr style="margin-top: -20px; margin-bottom: -3px;">
  <div class="row">
    <p class="text-center" style="margin-right: auto; margin-left: auto; margin-top: 40px;">
      <strong class="subtitle team-title">Modalidades</strong>
    </p>
  </div>
  <hr style="margin-top: 40px;">

  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center" style="margin-top: 10px;"><strong>Mini boost</strong></div>
        <%= cl_image_tag 'mini_boost', class: 'icon_modalidades' %>
        <div class="card-description-modalidades text-center">Explicações especificamente dirigidas à preparação de um teste, exame ou trabalho escolar.</div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center" style="margin-top: 10px;"><strong>Boost</strong></div>
        <%= cl_image_tag 'boost', class: 'icon_modalidades' %>
        <div class="card-description-modalidades text-center">Explicações regulares, ao longo do ano letivo</div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('assets/grey_background.png');">
        <div class="card-category text-center" style="margin-top: 10px;"><strong>Mega Boost</strong></div>
        <%= cl_image_tag 'mega_boost', class: 'icon_modalidades' %>
        <div class="card-description-modalidades text-center">Curso intensivo de preparação para os exames nacionais</div>
      </div>
    </div>
  </div>
</div>
</div>
