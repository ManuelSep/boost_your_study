<div style="background-image: url('assets/grey_background.png');">
  <% @areas.each do |area| %>
    <div class="container">
      <div class="row">
        <p class="text-center" style="margin-right: auto; margin-left: auto; margin-top: 40px;">
          <strong class="subtitle team-title"><%= area.name  %></strong>
        </p>
      </div>
      <hr style="margin-top: 50px; margin-bottom: 40px;">
      <div class="row ">
        <% area.disciplina_por_area.each do |disciplina| %>
          <div class="col-xs-12 col-sm-3">
            <div class="card-subject">
              <%= link_to AreaDisciplina.find_by(area: area, disciplina: disciplina) do %>
                <div class="card-subject" style=" width: 100%; height: 60%; margin-top: 0;">
                  <%= cl_image_tag disciplina.image, class: "icon_subjects" %>
                </div>
                <div class="card-category text-center"><strong><%= disciplina.nome %></strong></div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <hr style="margin-top: 40px;">
  <% end %>
</div>

